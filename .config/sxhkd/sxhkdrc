# Brightness
XF86MonBrightnessDown
	brightnessctl -e -d intel_backlight set '5%-'
XF86MonBrightnessUp
	brightnessctl -e -d intel_backlight set '+5%'

# Audio
XF86AudioRaiseVolume
	pulsemixer --unmute ; pulsemixer --change-volume +5 --max-volume 100
mod1 + XF86AudioRaiseVolume
	pulsemixer --unmute ; pulsemixer --change-volume +5
XF86AudioLowerVolume
	pulsemixer --unmute ; pulsemixer --change-volume -5
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle
XF86AudioMicMute
	pactl set-source-mute @DEFAULT_SINK@ toggle
XF86AudioNext
	dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next
XF86AudioPrev
	dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous
XF86AudioPlay
	dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause

# Application Launching
mod3 + space
	"$XDG_CONFIG_HOME/rofi/launcher.sh"
mod3 + Return
	alacritty -e tmux -f "$XDG_CONFIG_HOME"/tmux/tmux.conf
mod3 + mod1 + Return
	alacritty -e tmux attach
mod3 + mod1 + BackSpace
	"$HOME/.local/bin/lock.sh"

{_,@}Print
	scrot -s

# make sxhkd reload its configuration files:
mod3 + Escape
	pkill -USR1 -x sxhkd

# BSPWM
# quit/restart bspwm
mod3 + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
mod3 + {_,shift + }BackSpace
	bspc node -{c,k}

# alternate between the tiled and monocle layout
mod3 + m
	bspc desktop -l next

# set the window state
mod3 + {t,mod1 + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
mod3 + mod1 + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# focus/swap the node in the given direction
mod3 + {_,mod1 + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
mod3 + {comma,period}
	bspc node -f @{parent,brother}

# focus the next/previous node in the current desktop
mod3 + {n,p}
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
mod3 + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
mod1 + {grave,Tab}
	bspc {node,desktop} -f last

# focus or send to the given desktop
mod3 + {_,mod1 + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# preselect the direction
mod3 + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
mod3 + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
mod3 + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
mod3 + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
mod4 + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
mod4 + mod3 + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
mod3 + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

