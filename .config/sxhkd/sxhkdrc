# SXHKD CONFIG

# SXHKD KEYS {{{1

# reload sxhkd
mod3 + Escape
	pkill -USR1 -x sxhkd

# MEDIA KEYS {{{1

# Brightness
XF86MonBrightnessDown
	brightnessctl -e -d intel_backlight set '5%-'
XF86MonBrightnessUp
	brightnessctl -e -d intel_backlight set '+5%'

# Volume
XF86AudioRaiseVolume
	pulsemixer --unmute ; pulsemixer --change-volume +5 --max-volume 100
alt + XF86AudioRaiseVolume
	pulsemixer --unmute ; pulsemixer --change-volume +5
XF86AudioLowerVolume
	pulsemixer --unmute ; pulsemixer --change-volume -5
XF86AudioMute
	pactl set-sink-mute @DEFAULT_SINK@ toggle
XF86AudioMicMute
	pactl set-source-mute @DEFAULT_SINK@ toggle

# Spotify
XF86AudioNext
	dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next
XF86AudioPrev
	dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous
XF86AudioPlay
	dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause

# APPS {{{1

# rofi
mod3 + space
	"$XDG_CONFIG_HOME/rofi/launcher.sh"

# terminal / tmux
mod3 + Return
	alacritty -e tmux -f "$XDG_CONFIG_HOME/tmux/tmux.conf" new
mod3 + alt + Return
	alacritty -e tmux -f "$XDG_CONFIG_HOME/tmux/tmux.conf" attach
mod3 + alt + BackSpace
	"$HOME/.local/bin/lock.sh"

# screenshot
{_,@}Print
	scrot{ ,-s}

# BSPWM {{{1
# quit/restart bspwm
mod3 + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
mod3 + {_,shift + }BackSpace
	bspc node -{c,k}

mod3 + apostrophe
	bspc node -c

# alternate between the tiled and monocle layout
mod3 + m
	bspc desktop -l next

# set the window state
mod3 + {t,alt + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
mod3 + alt + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# focus/swap the node in the given direction
mod3 + {_,alt + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
mod3 + {comma,period}
	bspc node -f @{parent,brother}

# focus the next/previous node in the current desktop
mod3 + {n,p}
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
mod3 + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
alt + {grave,Tab}
	bspc {node,desktop} -f last

# focus or send to the given desktop
mod3 + {_,alt + }{1-9,0}
	bspc {desktop -f,node -d} 'focused:^{1-9,10}'

mod3 + alt + grave
	bspc node -m any.!focused --follow

# focus or send to the given desktop
#mod3 + ctrl + {_,alt + }{1-9,0}
#	bspc {desktop -f,node -d} 'HDMI1:^{1-9,10}'

mod3 + grave
	bspc monitor -f any.!focused

# mod4 + 1
# 	bspc monitor -f HDMI1
# 
# mod4 + 2
# 	bspc monitor -f eDP1

# preselect the direction
mod3 + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
mod3 + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
mod3 + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
mod3 + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

